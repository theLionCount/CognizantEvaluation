@model Common.Model.Airport

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Airport</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="iata" class="control-label"></label>
                <input asp-for="iata" class="form-control" />
                <span asp-validation-for="iata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="iso" class="control-label"></label>
                <input asp-for="iso" class="form-control" />
                <span asp-validation-for="iso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="longitude" class="control-label"></label>
                <input asp-for="longitude" class="form-control" />
                <span asp-validation-for="longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lattitude" class="control-label"></label>
                <input asp-for="lattitude" class="form-control" />
                <span asp-validation-for="lattitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="size" class="control-label"></label>
                <select asp-for="size" asp-items="Html.GetEnumSelectList<Common.Model.Size>()" class="form-control"></select>
                <span asp-validation-for="size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="type" class="control-label"></label>
                <select asp-for="type" asp-items="Html.GetEnumSelectList<Common.Model.AirportType>()" class="form-control"></select>
                <span asp-validation-for="type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
