            </div>
            <div class="form-group">
                <label asp-for="continent" class="control-label"></label>
                <select asp-for="continent" asp-items="Html.GetEnumSelectList<Common.Model.Continent>()" class="form-control"></select>
                <span asp-validation-for="continent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
